<section>
    <div class="container mt-5">
        <div class="row">
            {{#each }}
            <div class="col-md-3">
                <div class="card" style="width: 18rem; height:25rem;">
                    <img src="/product-images/{{this._id}}.jpg" style='height:12rem' class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">Rs.{{this.Price}}</p>
                        <p class="card-text">{{this.Discription}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
                        <button onclick="addToCart({{this._id}})" class="btn btn-primary">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}



        </div>
    </div>
</section>

