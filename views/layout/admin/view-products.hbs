<section>
    <div class="container">
        <div class="row mt-4"><a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Discription</th>
                </tr>
            </thead>
            <tbody>
                {{#each}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width:50px;height:50px" src="{{this.Image}}" alt=""></td>
                    <td>
                        <a href="/admin/delete-product?id={{this._id}}" class='btn btn-danger' onclick='return confirm('
                            Are you sure want to delete{{this.Name}}?')'>Delete</a>
                            <a href="/admin/edit-product/{{this._id}}"
                            class='btn btn-primary'>Edit</a></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>